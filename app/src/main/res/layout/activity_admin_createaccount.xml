<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="25dp"
        android:text="New Account"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/admin_createaccount_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:layout_marginRight="26dp"
        android:ems="10"
        android:hint="Employee ID"
        android:inputType="number"  />

    <EditText
        android:id="@+id/admin_createaccount_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/admin_createaccount_name"
        android:layout_alignStart="@+id/admin_createaccount_name"
        android:layout_below="@+id/admin_createaccount_name"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <RadioGroup
        android:id="@+id/admin_createaccount_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/admin_createaccount_password"
        android:layout_below="@+id/admin_createaccount_password"
        android:orientation="horizontal"
        android:layout_marginTop="16dp" >

        <RadioButton
            android:id="@+id/admin_createaccount_radio_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin" />

        <RadioButton
            android:id="@+id/admin_createaccount_radio_technician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Technician" />
    </RadioGroup>

    <Button
        android:id="@+id/admin_createaccount_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/admin_createaccount_name"
        android:layout_below="@+id/admin_createaccount_radio_group"
        android:layout_marginTop="46dp"
        android:text="Create" />


</RelativeLayout>