<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="highlighter.checklistapp.boundary.AdminSearchAccount">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/admin_search_account_search_filter"/>

    <ListView
        android:id="@+id/admin_search_account_search_accounts_list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/admin_search_account_search_filter"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"></ListView>

    <Button
        android:id="@+id/admin_search_account_search_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_search_account_search_accounts_list"
        android:text="Add Account"
        android:layout_alignEnd="@+id/admin_search_checklist_spinner"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/admin_search_account_search_homepage_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:text="Homepage" />
</RelativeLayout>
