<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="{relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textViewChecklistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:textSize="36sp" />

    <ListView
        android:id="@+id/user_detailedchecklist_list"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_below="@+id/textViewChecklistName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"></ListView>

    <Button
        android:id="@+id/user_detailedchecklist_btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_detailedchecklist_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Save Changes" />

</RelativeLayout>